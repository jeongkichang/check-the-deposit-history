{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@libs/db": ["libs/db/src"],
      "@libs/db/*": ["libs/db/src/*"],
      "@libs/slack": ["libs/slack/src"],
      "@libs/slack/*": ["libs/slack/src/*"],
      "@libs/common/utils": ["libs/common/src/utils"],
      "@libs/common/utils/*": ["libs/common/src/utils/*"],
